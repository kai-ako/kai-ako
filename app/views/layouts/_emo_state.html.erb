<div id="emo-state">
  <%= form_for :emo_state, url: emo_state_path do |f| %>

    <%= f.label :happy %>
    <%= f.radio_button("emotion", "happy") %>

    <%= f.label :neutral %>
    <%= f.radio_button("emotion", "neutral") %>

    <%= f.label :sad %>
    <%= f.radio_button("emotion", "sad") %>

    <%= f.label :comment %>
    <%= f.text_field :comment %>

    <%= f.submit %>

  <% end %>
  <a href="#" id="emo_state_links" class="btn btn-sm">See all</a>

</div>
