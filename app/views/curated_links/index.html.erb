<%= form_for CuratedLink.new do |f| %>
  <%= f.label :link %>:
  <%= f.text_field :link%><br />

  <%= f.label :title %>:
  <%= f.text_field :title %><br />

  <%= f.label :description %>:
  <%= f.text_field :description %><br />

  <%= f.submit "Submit" %>

<%end%>


<% @curated_links.each do |curated_link| %>
<p>
  <strong>Link:</strong>
  <%= link_to curated_link.link, curated_link.link %>
</p>
<p>
  <strong>Title:</strong>
  <%= curated_link.title %>
</p>
<p>
  <strong>Description:</strong>
  <%= curated_link.description %>
</p>
<%= link_to 'Destroy', curated_links_path(curated_link),
method: :delete,
data: { confirm: 'Are you sure?' } %>
<% end %>
